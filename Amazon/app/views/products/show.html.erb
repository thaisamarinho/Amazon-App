<h2><%= @product.title %></h2>
<p><%= @product.description %></p>
<p> &#36; <%= (@product.price).to_f.round(2) %></p>

<%= link_to "Edit", edit_product_path(@product)%>
<%= link_to "Delete", product_path(@product),
                      method: :delete,
                      data: {confirm: 'Are you sure you want to delete this product?'}%>
